{
  "$schema": "https://docs.renovatebot.com/renovate-schema.json",
  "extends": [
    "config:best-practices",
    "schedule:daily",
    "schedule:automergeDaily",
    ":separateMultipleMajorReleases",
    ":timezone(Asia/Tokyo)"
  ],
  "packageManager": "yarn",
  "dependencyDashboard": false,
  "labels": ["renovate"],
  "prConcurrentLimit": 0,
  "prHourlyLimit": 0,
  "automergeType": "digest",
  "automerge": false,
  "major": {
    "labels": ["renovate", "update_major"]
  }
}
